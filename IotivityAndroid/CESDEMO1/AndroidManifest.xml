<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.iotivity.cesdemo"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19" />

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">

        <activity
            android:name="org.iotivity.cesdemo.SampleActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.iotivity.cesdemo.DarkThemeActivity"
            android:theme="@style/SampleTheme" 
            android:text="TEST ACTIVITY"/>

        <activity
            android:name="org.iotivity.cesdemo.LightThemeActivity"
            android:theme="@style/SampleTheme.Light" 
            android:text="CES DEMO"/>
    </application>
</manifest>
